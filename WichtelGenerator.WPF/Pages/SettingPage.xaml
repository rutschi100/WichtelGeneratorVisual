<Page x:Class="WichtelGenerator.WPF.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="SettingPage">

    <StackPanel Background="Beige">
        <GroupBox BorderBrush="Aqua" Header="Mail Einstellungen">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0">Mail Adresse</Label>
                <TextBox Grid.Column="1" MinWidth="80" Grid.Row="0" />

                <Label Grid.Column="0" Grid.Row="1">User Name</Label>
                <TextBox Grid.Column="1" Grid.Row="1" />

                <Label Grid.Column="0" Grid.Row="2">Passwort</Label>
                <TextBox Grid.Column="1" Grid.Row="2" />


            </Grid>
        </GroupBox>

    </StackPanel>
</Page>