<Page x:Class="WichtelGenerator.WPF.Pages.RufflePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="RufflePage"
      Background="White">

    <StackPanel>
        <Label Background="AliceBlue">Einstellung</Label>
        <RadioButton GroupName="RuffleVisible">Per Mail</RadioButton>
        <RadioButton GroupName="RuffleVisible">Hier anzeigen</RadioButton>
        <Button Margin="2" Background="Green">Verlosung auslösen</Button>

        <Label Background="AliceBlue" Visibility="Collapsed">Verlosungsresultat</Label>
        <DataGrid Visibility="Collapsed">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Wichtel" />
                <DataGridTextColumn Header="Beschenkt" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Page>